<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="8dp"
    android:elevation="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_in_friend_request"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/profile"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/userName_in_friend_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User name"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/image_in_friend_request"
            android:layout_marginTop="15dp"
            android:layout_marginStart="8dp"
            />


        <TextView
            android:id="@+id/status_in_friends_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/image_in_friend_request"
            android:layout_below="@+id/userName_in_friend_request"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            />

    </RelativeLayout>




</androidx.cardview.widget.CardView>

